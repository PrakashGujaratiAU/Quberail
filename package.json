{
  "name": "fullstack-app",
  "private": true,
  "scripts": {
    "postinstall": "cd server && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "cd server && nodemon src/index.js",
    "dev-client": "cd client && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22"
  }
}